{% extends '@CraueFormFlowDemo/layout.html.twig' %}

{% block stylesheets %}
	{{ parent() }}

	<link type="text/css" rel="stylesheet" href="{{ asset('bundles/craueformflow/css/buttons.css') }}" />
	<link type="text/css" rel="stylesheet" href="{{ asset('bundles/craueformflowdemo/css/form-flow.css') }}" />
{% endblock %}

{% block content %}
	<div class="back-link">
		<a href="{{ path('_FormFlow_start') }}">{{ 'back' | trans }}</a>
	</div>

	{% block headline %}
	{% endblock %}

	<div class="flow-steps">
		{{- 'steps' | trans }}: {% include '@CraueFormFlow/FormFlow/stepList.html.twig' -%}
	</div>

	{% block form %}
	{% endblock %}

	<div class="clear"></div>

	<div class="data-usage-notice">{{ 'data_usage_notice' | trans }}</div>
{% endblock %}
